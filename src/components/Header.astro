---
import { Image } from "astro:assets";
import ieeeLogo from "../images/ieeelogo.png";
import bennettLogo from "../images/bennettlogo.png";
---

<header class="sticky top-0 z-40 bg-gradient-to-r from-[#00629B] via-[#00B5E2] to-[#009CA6] text-white shadow-md">
  <div class="navbar max-w-5xl mx-auto px-4">
    <div class="flex-1 flex items-center gap-4">
      <a href="/" class="flex items-center gap-3" data-page-link>
        <Image
          src={ieeeLogo}
          alt="IEEE Club Logo"
          class="h-10 w-auto rounded bg-white/10 border border-white/20 p-1"
          loading="lazy"
        />
        <span class="hidden sm:inline font-bold text-lg tracking-wide">IEEE Student Branch</span>
      </a>
    </div>
    <div class="flex-none flex items-center gap-3">
      <Image
        src={bennettLogo}
        alt="University Logo"
        class="h-10 w-auto rounded bg-white/10 border border-white/20 p-1"
        loading="lazy"
      />
    </div>
  </div>
</header>
